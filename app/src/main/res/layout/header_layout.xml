<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/azul_marinho"
        android:id="@+id/headerLayout"
        android:visibility="visible">

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/hamburger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/header_icone_hamburguer"
            android:layout_marginStart="12dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/header_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintStart_toEndOf="@+id/header_icone_hamburguer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.378"/>
</androidx.constraintlayout.widget.ConstraintLayout>
